<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FacteSimchin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:fontFamily">@font/b_nazanin</item>
    </style>

    <style name="Theme.FacteSimchin" parent="Base.Theme.FacteSimchin">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@drawable/bg_gradient</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="FacteSimchin.AlertDialogsTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">#000000</item> <!-- Title & message text -->
        <item name="android:textColor">#000000</item> <!-- Button text -->
        <item name="android:titleTextColor">#000000</item>
        <item name="android:background">#FFFFFF</item>
        v<item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@style/FacteSimchin.AlertDialogs.TextApperance</item>
        <item name="buttonBarNegativeButtonStyle">@style/FacteSimchin.AlertDialogs.ButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/FacteSimchin.AlertDialogs.ButtonStyle</item>
    </style>

    <style name="FacteSimchin.AlertDialogs.TextApperance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="FacteSimchin.AlertDialogs.ButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColorPrimary">#000000</item> <!-- Title & message text -->
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>